
/*
* Default params
*/
params {
    input = "$projectDir/assets/dummy_file.csv"
    metadata = "$projectDir/assets/dummy_file.csv"
    input_dir = "$projectDir/assets/dummy_dir/"
    comparison = "$projectDir/assets/dummy_file.csv"
    outdir = './Analysis/'

    publish_dir_mode = 'copy'

    run_input_check = true
    run_cut_adapt = true
    run_cat_fastq = true
    run_split_fastq = false
    run_alignment = true
    run_featurecounts = false
    run_qc = true
    run_fastqc = true
    run_rnaseqc = true
    run_rseqc = true
    run_hs_metrics = false
    run_multiqc = true
    run_de = true
    run_report = true
    
    only_input = false
    only_fastq = false
    only_alignment = false
    
    workflow = 'regular'

    output_fastq = true
    
    aligner = 'star'
}    

// Load base.config by default for all pipelines
includeConfig "conf/base.config"

// Load flowswitch.config
includeConfig "conf/flowswitch.config"

// Load modules.config for DSL2 module specific options
includeConfig "conf/modules.config"

/*
*
*/
// Capture exit codes from upstream processes when piping
process.shell = ["/bin/bash", "-euo", "pipefail"]

timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline.html"
    overwrite = true
}

report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report.html"
    overwrite = true
}

trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace.txt"
    overwrite = true
}

dag {
    enabled = true
    file    = "${params.outdir}/pipeline_info/pipeline_dag.html"
    overwrite = true
}

