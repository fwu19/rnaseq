    params.run_report = false

}

/*
* second level
*/
if (!params.run_qc_fastq){
    params.run_fastqc = false
}

if (!params.run_qc_alignment){
    params.run_rnaseqc = false
    params.run_rseqc = false
    params.run_hs_metrics = false
    params.run_samtools = false
}