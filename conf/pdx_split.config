
/*
========================================================================================
    MODULES
========================================================================================
*/

process {
    
    withName: '.*:SPLIT_FASTQ' {
        ext.args = "-s 50000000 -O ./ -f -e .gz "
        publishDir = [
            path: { "${params.outdir}/split_fastq/" },
            mode: "${params.publish_dir_mode}",
            pattern: '*part_*.gz',
            enabled: false
        ]   
    }

    withName: '.*:PDX_SPLIT_FASTQ:STAR' {
        ext.args = "--sjdbOverhang 100 --quantMode TranscriptomeSAM GeneCounts --outSAMattributes NH HI NM MD AS XS --outSAMheaderHD @HD VN:1.4 "
        publishDir = [
            path: { "${params.outdir}/STAR/${params.genome}/_unfiltered/" },
            mode: "${params.publish_dir_mode}",
            pattern: '*',
            enabled: false
        ]   
    }

    withName: '.*:PDX_SPLIT_FASTQ:STAR_HOST' {
        ext.args = "--sjdbOverhang 100 --quantMode TranscriptomeSAM GeneCounts --outSAMattributes NH HI NM MD AS XS --outSAMheaderHD @HD VN:1.4 "
        publishDir = [
            path: { "${params.outdir}/STAR/${params.genome_host}/_unfiltered/" },
            mode: "${params.publish_dir_mode}",
            pattern: '*',
            enabled: false
        ]   
    }

    withName: '.*:PDX_SPLIT_FASTQ:BWA_MEM' {
        ext.args = ""
        publishDir = [
            path: { "${params.outdir}/BWA-MEM/${params.genome}/_unfiltered/" },
            mode: "${params.publish_dir_mode}",
            pattern: '*',
            enabled: false
        ]   
    }

    withName: '.*:PDX_SPLIT_FASTQ:BWA_MEM_HOST' {
        publishDir = [
            path: { "${params.outdir}/BWA-MEM/${params.genome_host}/_unfiltered/" },
            mode: "${params.publish_dir_mode}",
            pattern: '*',
            enabled: false
        ]   
    }
    
    withName: '.*:PDX_SPLIT_FASTQ:MERGE_BAM' {
        ext.suffix = '_Filtered'
        publishDir = [
            path: { dir ->
                params.aligner == 'star' ? "${params.outdir}/STAR/${params.genome}/" :
                params.aligner == 'bwa-mem' ? "${params.outdir}/BWA-MEM/${params.genome}/" : 
                "${params.outdir}/XenofilteR/${params.genome}/"
                },
            mode: "${params.publish_dir_mode}",
            pattern: "*",
            enabled: true
        ]   
    }

    withName: '.*:PDX_SPLIT_FASTQ:XENOFILTER' {
        publishDir = [
            path: { dir ->
                params.aligner == 'star' ? "${params.outdir}/STAR/${params.genome}/" :
                params.aligner == 'bwa-mem' ? "${params.outdir}/BWA-MEM/${params.genome}/" : 
                "${params.outdir}/XenofilteR/${params.genome}/"
                },
            mode: "${params.publish_dir_mode}",
            pattern: "*",
            enabled: false
        ]   
    }

}

